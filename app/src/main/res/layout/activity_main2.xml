<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="50dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/jakartab"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="20dp"
        />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@id/txt_login"
        app:srcCompat="@drawable/user_foreground"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="12dp"
        android:fontFamily="@font/jakartar"
        android:layout_below="@id/img_profile"
        android:textColor="@color/grey"
        android:layout_centerInParent="true"
        />
    <EditText
        android:id="@+id/edt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="your username"
        android:textSize="20dp"
        android:fontFamily="@font/jakartam"
        android:layout_below="@id/txt_username"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        />

    <TextView
        android:id="@+id/txt_gende"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="12dp"
        android:fontFamily="@font/jakartar"
        android:layout_below="@id/edt_username"
        android:textColor="@color/grey"
        android:layout_centerInParent="true">
    </TextView>

    <EditText
        android:id="@+id/edt_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="your gender"
        android:textSize="20dp"
        android:fontFamily="@font/jakartam"
        android:layout_below="@id/txt_gende"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/txt_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textSize="12dp"
        android:fontFamily="@font/jakartar"
        android:layout_below="@id/edt_gender"
        android:textColor="@color/grey"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp">
    </TextView>

    <EditText
        android:id="@+id/edt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="your number"
        android:textSize="20dp"
        android:fontFamily="@font/jakartam"
        android:layout_below="@id/txt_bio"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        />

</RelativeLayout>