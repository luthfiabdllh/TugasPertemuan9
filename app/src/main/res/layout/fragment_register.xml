<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="50dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/jakartab"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16dp"
        android:layout_below="@id/txt_login"
        android:fontFamily="@font/jakartam"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="38dp"
        android:background="@drawable/edittext"
        android:layout_below="@id/txt_email"
        android:hint="Insert your email"
        android:textSize="14dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="16dp"
        android:layout_below="@id/edt_email"
        android:fontFamily="@font/jakartam"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/edittext"
        android:layout_below="@id/txt_password"
        android:hint="Insert your password"
        android:inputType="textPassword"
        android:textSize="14dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="16dp"
        android:layout_below="@id/edt_password"
        android:fontFamily="@font/jakartam"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:inputType="text"
        android:background="@drawable/edittext"
        android:layout_below="@id/txt_username"
        android:hint="Insert your username"
        android:textSize="14dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textSize="16dp"
        android:layout_below="@id/edt_username"
        android:fontFamily="@font/jakartam"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <EditText
        android:id="@+id/edt_number"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:inputType="number"
        android:background="@drawable/edittext"
        android:layout_below="@id/txt_number"
        android:hint="Insert your phone number"
        android:textSize="14dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="16dp"
        android:layout_below="@id/edt_number"
        android:fontFamily="@font/jakartam"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <RadioGroup
        android:id="@+id/radioGroupGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txt_gender"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        >
        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="16sp"
            android:fontFamily="@font/jakartar"
            android:textColor="@color/grey"
            android:layout_marginRight="20dp"/>

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="16sp"
            android:fontFamily="@font/jakartar"
            android:textColor="@color/grey" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupGender"
        android:background="@drawable/mainbtn"
        android:text="@string/btn_signup"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:fontFamily="@font/jakartab"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:id="@+id/txt_or"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_signup"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textSize="16dp"
            android:fontFamily="@font/jakartar"
            android:textColor="@color/grey"
            android:layout_marginHorizontal="20dp"
            />
        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icons_foreground"
        android:layout_below="@id/txt_or"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-20dp"
        />

</RelativeLayout>